@using BarbershopManagementSystem.WebUI.ViewModels
@model EnrollmentViewModel;

<h3 class="m-5">New Enrollment</h3>

<div class="row m-5">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <div>
                    <label asp-for="Customer" class=" control-label">Customer</label>
                    <select name="CustomerId" asp-for="CustomerId" class="form-select form-control border custom-select-scroll" asp-items="@ViewBag.Customers"></select>
                </div>
            </div>
            <div class="form-group">
                <div>
                    <label asp-for="Employee" class=" control-label">Employee</label>
                    <select name="EmployeeId" asp-for="EmployeeId" class="form-select form-control border" asp-items="@ViewBag.Employees"></select>
                </div>
            </div>
            <div class="form-group">
                <div>
                    <label asp-for="Service" class=" control-label">Service</label>
                    <select name="ServiceId" asp-for="ServiceId" class="form-select form-control border" asp-items="@ViewBag.Services"></select>
                </div>
            </div>
            <div class="form-group">
                <div>
                    <label asp-for="Status" class=" control-label">Status</label>
                    <select name="StatusId" asp-for="Status" class="form-select form-control border" asp-items="@ViewBag.Statuses"></select>
                </div>
            </div>
            <div class="form-group mt-5">
                <a asp-action="Index" class="btn btn-outline-info">
                    Back
                </a>
                <button type="submit" class="btn btn-success">
                    Save
                </button>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
