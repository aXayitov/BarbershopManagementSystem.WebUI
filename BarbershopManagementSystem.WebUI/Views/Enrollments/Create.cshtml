@using BarbershopManagementSystem.WebUI.ViewModels
@model EnrollmentViewModel;

<h3 class="m-5">New Enrollment</h3>

<div class="row m-5">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Customer"></label>
                <input asp-for="Customer" class="form-control" />
                <span asp-validation-for="Customer" class="text-danger" />
            </div>
            <div class="form-group">
                <label asp-for="Employee"></label>
                <input asp-for="Employee" class="form-control" />
                <span asp-validation-for="Employee" class="text-danger" />
            </div>
            <div class="form-group">
                <label asp-for="Service"></label>
                <textarea asp-for="Service" class="form-control"></textarea>
                <span asp-validation-for="Service" class="text-danger" />
            </div>
            <div class="form-group">
                <div>
                    <label asp-for="Status" class=" control-label">Status</label>
                    <select name="StatusId" asp-for="Status" class="form-select form-control border" asp-items="@ViewBag.Statuses"></select>
                </div>
            </div>
            <div class="form-group mt-5">
                <a asp-action="Index" class="btn btn-outline-info">
                    Back
                </a>
                <button type="submit" class="btn btn-success">
                    Save
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
