@using BarbershopManagementSystem.WebUI.ViewModels
@model EnrollmentViewModel

@{
    Layout = null;
}

<div class="container mt-4 mb-5" style="background-color: #252a33; color: white">
    <div class="card shadow border-0" style="background-color: #252a33; color: white">

        <div class="card-body">
            <form asp-action="Edit">
                <input type="hidden" asp-for="Id" />

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="mb-4">
                    <label asp-for="CustomerId" class="form-label">Customer</label>
                    <select asp-for="Customer" name="customerId" class="form-select form-control border" asp-items="@ViewBag.Customers"></select>
                    <span asp-validation-for="CustomerId" class="text-danger"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="EmployeeId" class="form-label">Employee</label>
                    <select asp-for="Employee" name="employeeId" class="form-select form-control border" asp-items="@ViewBag.Employees"></select>
                    <span asp-validation-for="EmployeeId" class="text-danger"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="ServiceId" class="form-label">Service</label>
                    <select asp-for="Service" name="serviceId" class="form-select form-control border" asp-items="@ViewBag.Services"></select>
                    <span asp-validation-for="ServiceId" class="text-danger"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="Date" class="form-label">Date</label>
                    <input asp-for="Date" type="date" class="form-control" />
                    <span asp-validation-for="Date" class="text-danger"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="Status" class="form-label">Status</label>
                    <select asp-for="Status" class="form-select form-control border" asp-items="@ViewBag.Statuses"></select>
                    <span asp-validation-for="Status" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between mt-5">
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left-circle"></i> Back
                    </a>
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-save2"></i> Save Changes
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
