@using BarbershopManagementSystem.WebUI.ViewModels
@model EmployeeViewModel;

<h3 class="m-5">New Employee</h3>

<div class="row m-5">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FullName"></label>
                <input asp-for="FullName" class="form-control" />
                <span asp-validation-for="FullName" class="text-danger" />
            </div>
            <div class="form-group">
                <label asp-for="PhoneNumber"></label>
                <textarea asp-for="PhoneNumber" class="form-control"></textarea>
                <span asp-validation-for="PhoneNumber" class="text-danger" />
            </div>
            <div class="form-group">
                <div>
                    <label asp-for="Position" class=" control-label">Position</label>
                    <select name="PositionId" asp-for="PositionId" class="form-select form-control border" asp-items="@ViewBag.Positions"></select>
                </div>
            </div>
            <div class="form-group mt-5">
                <a asp-action="Index" class="btn btn-outline-info">
                    Back
                </a>
                <button type="submit" class="btn btn-success">
                    Save
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
