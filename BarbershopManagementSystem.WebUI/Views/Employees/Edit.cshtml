@using BarbershopManagementSystem.WebUI.ViewModels
@model EmployeeViewModel
@{
    Layout = null;
}
<div class="container mt-4 mb-5" style="background-color: #252a33; color: white">
    <div class="card shadow border-0" style="background-color: #252a33; color: white">

        <div class="card-body">
            <form asp-action="Edit">
                <input type="hidden" asp-for="Id" />

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="mb-4">
                    <label asp-for="FullName" class="form-label">Full Name</label>
                    <input asp-for="FullName" class="form-control" placeholder="Enter full name" />
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="PhoneNumber" class="form-label">Phone Number</label>
                    <input asp-for="PhoneNumber" class="form-control" placeholder="+1234567890" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="PositionId" class="form-label">Position</label>
                    <select name="positionId" asp-for="Position" class="form-select form-control border" asp-items="@ViewBag.Positions"></select>
                </div>

                <div class="d-flex justify-content-between mt-5">
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left-circle"></i> Back
                    </a>
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-save2"></i> Save Changes
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
