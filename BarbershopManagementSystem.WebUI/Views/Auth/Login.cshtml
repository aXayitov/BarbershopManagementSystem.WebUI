@using BarbershopManagementSystem.WebUI.ViewModels
@model LoginViewModel

@{
	ViewData["Title"] = "Login";
	Layout = null;
}

<div class="container">
	<div class="row d-flex justify-content-center mt-5">
		<div class="col-12 col-md-8 col-lg-6 col-xl-5">
			<div class="card py-3 px-2">
				<h4 class="text-center mb-3 mt-3">Login</h4>
				<div class="row mx-auto d-flex justify-content-between gap-4 mt-3 mb-3">
					<div class="col-4 social-link">
						<i class="fa-brands fa-twitter"></i>
					</div>
					<div class="col-4 social-link">
						<i class="fa-brands fa-google"></i>
					</div>
					<div class="col-4 social-link">
						<i class="fa-brands fa-linkedin"></i>
					</div>
				</div>
				<div class="division">
					<div class="row">
						<div class="col-3"><div class="line l"></div></div>
						<div class="col-6"><span>Enter your credentials</span></div>
						<div class="col-3"><div class="line r"></div></div>
					</div>
				</div>
				<form class="login-form mt-3" method="post" asp-action="Login">
					<div class="form-group">
						<input asp-for="Username" type="username" class="form-control" placeholder="Username">
					</div>
					<div class="form-group">
						<input asp-for="Password" type="password" class="form-control" placeholder="Password">
					</div>
					<div class="d-flex justify-content-between">
						<div class="col-md-6 col-12">
							<div class="form-group form-check">
								<input type="checkbox" class="form-check-input">
								<label class="form-check-label">Remember me</label>
							</div>
						</div>
						<div class="col-md-6 col-12 d-flex justify-content-end">
							<a asp-action="ForgotPassword">Forgot password</a>
						</div>
					</div>
					<div class="d-flex row">
						<div class="form-group mt-3 p-2">
							<button type="submit" class="btn btn-block btn-primary w-100">
								Login
							</button>
						</div>
						<div class="form-group mt-2 p-2">
							<a asp-action="Register" class="btn btn-block btn-primary w-100">
								Register
							</a>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}
