@using BarbershopManagementSystem.WebUI.ViewModels
@model LoginViewModel

@{
    ViewBag.Title = "Login";
    Layout = null; // Login sahifasi uchun layoutni o'chirish
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
            background: linear-gradient(to right, #8e44ad, #3498db);
            font-family: 'Arial', sans-serif;
        }

        .login-card {
            background-color: white;
            padding: 2rem;
            border-radius: 15px;
            box-shadow: 0 8px 15px rgba(0, 0, 0, 0.2);
            width: 100%;
            max-width: 400px;
        }

            .login-card h2 {
                text-align: center;
                color: #333;
                margin-bottom: 1.5rem;
            }

        .form-control {
            border-radius: 10px;
        }

        .btn-primary {
            background-color: #3498db;
            border: none;
            border-radius: 10px;
        }

            .btn-primary:hover {
                background-color: #2e86c1;
            }

        .forgot-password {
            text-align: right;
            font-size: 0.9rem;
        }

            .forgot-password a {
                text-decoration: none;
                color: #3498db;
            }

                .forgot-password a:hover {
                    text-decoration: underline;
                }
    </style>
</head>
<body>
    <div class="login-card">
        <h2>Login</h2>
        @if (ViewBag.Error != null)
        {
            <p class="text-danger">@ViewBag.Error</p>
        }
        <form asp-action="Login" method="post">
            <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input type="text" id="username" name="Username" class="form-control" asp-for="Username" placeholder="Enter your username" required>
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input type="password" id="password" name="Password" class="form-control" asp-for="Password" placeholder="Enter your password" required>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary w-100 mt-3">Login</button>
        </form>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.4/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.5/dist/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@4.0.0/dist/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>
