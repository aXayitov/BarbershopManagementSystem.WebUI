@using BarbershopManagementSystem.WebUI.ViewModels
@model PositionViewModel
@{
    Layout = null;
}
<div class="container mt-4 mb-5" style="background-color: #252a33; color: white">
    <div class="card shadow border-0" style="background-color: #252a33; color: white">

        <div class="card-body">
            <form asp-action="Edit">
                <input type="hidden" asp-for="Id" />

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="mb-4">
                    <label asp-for="Name" class="form-label">Position Name</label>
                    <input asp-for="Name" class="form-control" placeholder="Enter position name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="Description" class="form-label">Description</label>
                    <textarea asp-for="Description" class="form-control" placeholder="Enter position description"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between mt-5">
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left-circle"></i> Back
                    </a>
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-save2"></i> Save Changes
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
