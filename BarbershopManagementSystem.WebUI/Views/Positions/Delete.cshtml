@using BarbershopManagementSystem.WebUI.ViewModels
@model PositionViewModel;

@{
    ViewData["Title"] = "Delete";
    Layout = null;
}
<div class="row">
    <h1 class="text-center mb-5 text-danger"><i class="fa fa-exclamation-circle" style="font-size:100px"></i></h1>
    <h1 class="text-center"><b style="color:white;">@Model.Name</b></h1>
</div>
<div class="row">
    <h4 class="text-center">
        Are you sure you want to delete this position?
    </h4>
    <h4 class="text-center">
        If you delete this position, all related information (like assigned employees) will also be deleted!!!
    </h4>
</div>
<div>
    <hr />
    <form asp-action="Delete" asp-controller="Positions">
        <div class="d-flex justify-content-center mt-5 m-2" style="gap: 10px;">
            <button asp-action="Index" class="btn btn-secondary" style="width:120px">
                No
            </button>
            <button asp-route-itemid="@Model.Id" class="btn btn-danger" style="width:120px">
                Yes
            </button>
        </div>
    </form>
</div>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
